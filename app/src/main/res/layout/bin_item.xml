<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@drawable/bin_background">

    <!-- Bin Name -->
    <TextView
        android:id="@+id/bin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bin Name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bin Image -->
    <ImageView
        android:id="@+id/bin_image"
        android:layout_width="255dp"
        android:layout_height="199dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bin"
        app:layout_constraintBottom_toTopOf="@id/bin_address"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bin_name" />

    <!-- Bin Address -->
    <TextView
        android:id="@+id/bin_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bin Address"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bin_image" />

    <!-- Bin Fullness Level -->
    <TextView
        android:id="@+id/bin_fullness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fullness: 70%"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bin_address" />

    <!-- Check Button -->
    <Button
        android:id="@+id/check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/dark_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
